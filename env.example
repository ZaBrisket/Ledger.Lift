# T3 Enhancement Environment Variables
# Copy this file to .env and update values for your environment

# Feature Flags
FEATURES_T3_AUDIT=true
FEATURES_T3_COSTS=true
FEATURES_T3_GDPR=true

# Audit Settings
AUDIT_BATCH_SIZE=50
AUDIT_FLUSH_INTERVAL_MS=1000
AUDIT_DURABLE_MODE=memory
# REDIS_URL=redis://localhost:6379  # Uncomment if using Redis for audit durability

# Cost Settings
COST_PER_PAGE_CENTS=12
MAX_JOB_COST_CENTS=24000

# GDPR Settings
DELETION_SWEEP_INTERVAL_SECONDS=300

# Database (update for your environment)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ledgerlift

# Optional: Redis for durable audit logging
# REDIS_URL=redis://localhost:6379/0
